{# templates/bundles/LeaptCoreBundle/Datalist/datalist_grid_layout.html.twig #}

{% extends "@!LeaptCore/Datalist/datalist_grid_layout.html.twig" %}

{% block simple_filter %}
    <div class="form-group">
        <label for="{{ form.vars.id }}">{{ form.vars.label|trans({}, datalist.option('translation_domain')) }}</label>
        {{ form_widget(form, { 'attr': { 'class': 'bg-gray-50 border focus:outline-blue-500 border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
    </div>
{% endblock simple_filter %}

{% block datalist_filters %}
    {% set filters_on_top = datalist.option('filters_on_top') %}
    {% set form_class = filters_on_top ? 'form-inline' : 'form-vertical' %}
    <form class="{{ form_class }}" method="get" data-admin="form-manager" novalidate>
        {{ filters_on_top ? '<br />' : '' }}
        {% for filter in filters %}
            {{ datalist_filter(filter) }}{% if filters_on_top %}&nbsp;{% endif %}
        {% endfor %}
        {{ filters_on_top ? '<br /><br />' : '' }}
        <button type="submit" class="mt-3 btn hover:outline-blue-500 border-gray-300 text-gray-900 text-sm rounded-lg hover:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">{{ submit|trans({}, 'LeaptCoreBundle') }}</button>
        <a class="mt-3 btn hover:outline-blue-500 border-gray-300 text-gray-900 text-sm rounded-lg hover:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" href="{{ url }}">{{ reset|trans({}, 'LeaptCoreBundle') }}</a>
    </form>
{% endblock datalist_filters %}