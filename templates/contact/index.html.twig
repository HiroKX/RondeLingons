{% extends 'base.html.twig' %}
{% block body %}
    {% include 'divider/top.html.twig' %}
    <section class="flex items-center py-16 bg-slate-200 font-poppins dark:bg-gray-800 ">
        <div class="justify-center flex-1 max-w-6xl px-4 py-4 mx-auto lg:py-6 md:px-6">
            <div class="max-w-2xl px-3 py-6 mx-auto rounded shadow dark:bg-gray-700 bg-gray-50">
                <div class="flex justify-center p-4 mx-10 mb-6 text-gray-100 bg-blue-500 rounded-md -mt-14 ">
                    <h2 class="text-lg font-semibold text-center md:text-2xl">Contactez-nous !</h2>
                </div>
                <div class="mt-8">
                    {{ form_start(form) }}
                        <div class="flex flex-wrap mb-6">
                            <div class="w-full px-3 md:w-1/2 md:mb-0">
                                {{ form_row(form.nom) }}
                            </div>
                            <div class="w-full px-3 md:w-1/2 md:mb-0">
                                {{ form_row(form.prenom) }}
                            </div>
                        </div>
                        <div class="px-3 mb-6">
                            {{ form_row(form.sujet) }}
                        </div>
                        <div class="px-3 mb-6">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="px-3 mb-6">
                           {{ form_row(form.message) }}
                        </div>
                        <div class="px-3">
                            <div class="flex justify-center">
                                <button
                                        class="px-4 py-2 font-medium text-gray-100 bg-blue-500 rounded shadow hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-700">
                                    Envoyez !
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
    {% include 'divider/bot.html.twig' %}

{% endblock %}